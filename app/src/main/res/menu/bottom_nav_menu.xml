<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:background="@android:color/white"
    android:elevation="8dp"
    android:clipChildren="false"> <!-- CHO PHÉP NÚT CON "TRÀN" RA NGOÀI -->

    <!-- Home -->
    <LinearLayout
        android:id="@+id/tabHome"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_home"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textSize="11sp" />
    </LinearLayout>

    <!-- Creator -->
    <LinearLayout
        android:id="@+id/tabCreator"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/ic_creator"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Creator"
            android:textSize="11sp" />
    </LinearLayout>

    <!-- Upload (NÚT GIỮA ĐÃ ĐƯỢC NÂNG CẤP) -->
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/tabUpload"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:translationY="-16dp"
            android:background="@drawable/bg_circle_button"
            android:src="@drawable/ic_add"
            android:scaleType="center"
            android:elevation="4dp"
            app:tint="@android:color/white" />
    </FrameLayout>


    <!-- Subscriptions -->
    <LinearLayout
        android:id="@+id/tabSubs"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_subscriptions"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subscriptions"
            android:textSize="11sp" />
    </LinearLayout>

    <!-- You -->
    <LinearLayout
        android:id="@+id/tabProfile"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_person"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You"
            android:textSize="11sp" />
    </LinearLayout>

</LinearLayout>