<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="16dp">

    <!-- Khung chứa Video & Thumbnail (Tỷ lệ 16:9) -->
    <FrameLayout
        android:id="@+id/video_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Trình phát Video Autoplay -->
        <com.google.android.exoplayer2.ui.PlayerView
            android:id="@+id/player_view_autoplay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:use_controller="false"
            app:resize_mode="zoom"
            app:surface_type="texture_view" /> <!-- TextureView mượt hơn cho danh sách cuộn -->
        <!-- Hình nền (Hiện lúc chưa phát hoặc khi dừng) -->
        <ImageView
            android:id="@+id/video_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:src="@drawable/logo_metube" />

        <TextView
            android:id="@+id/tv_duration_overlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="8dp"
            android:background="@drawable/background_duration_badge"
            android:paddingHorizontal="4dp"
            android:paddingVertical="2dp"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            android:elevation="5dp"
            tools:text="10:05" />
    </FrameLayout>


    <!-- Avatar của kênh -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/channel_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"
        tools:src="@drawable/logo_metube"
        app:layout_constraintTop_toBottomOf="@id/video_container"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Tiêu đề video -->
    <TextView
        android:id="@+id/video_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        tools:text="Đây là một tiêu đề video rất dài để kiểm tra xem nó có hiển thị đúng 2 dòng hay không"
        android:textColor="@color/app_main_color"
        android:textSize="20sp"
        android:textStyle="bold"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintTop_toTopOf="@id/channel_avatar"
        app:layout_constraintStart_toEndOf="@id/channel_avatar"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Thông tin video -->
    <TextView
        android:id="@+id/video_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/app_main_color"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/video_title"
        app:layout_constraintStart_toStartOf="@id/video_title"
        app:layout_constraintEnd_toEndOf="@id/video_title"
        tools:text="Tên kênh • 2 days ago" />

    <ImageButton
        android:id="@+id/btn_video_options"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_more_vert"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="More options"
        app:layout_constraintTop_toTopOf="@id/channel_avatar"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>