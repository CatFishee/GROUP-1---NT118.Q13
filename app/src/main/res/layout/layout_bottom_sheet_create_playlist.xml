<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:layout_margin="24dp"
    android:background="@drawable/background_bottom_sheet_white">

    <!-- 1. Header: Màu App Main Color -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New playlist"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/app_main_color"
        android:layout_marginBottom="16dp"/>

    <!-- 2. Input Title -->
    <!-- app:boxStrokeColor: Quản lý màu viền (Bình thường nhạt, focus đậm) -->
    <!-- app:hintTextColor: Màu chữ Title nhỏ khi đang nhập -->
    <!-- android:textColorHint: Màu chữ Title to khi chưa nhập -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Title"

        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxBackgroundMode="outline"

        app:boxStrokeColor="@color/selector_input_stroke"
        app:boxStrokeWidth="2dp"
        app:boxStrokeWidthFocused="2dp"

        app:hintTextColor="@color/app_main_color"
        android:textColorHint="@color/app_main_color"
        app:cursorColor="@color/app_main_color"

        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_playlist_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:inputType="textCapSentences" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- 3. Visibility Section (Gom chung vào khung) -->
    <!-- Margin top để cách ô nhập liệu ra -->
    <LinearLayout
        android:id="@+id/layout_visibility_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:clickable="true"
        android:background="@drawable/background_visibility_container">

        <!-- Label nhỏ: Visibility -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Visibility"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"/>

        <!-- Dòng chọn: Private + Mũi tên -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="2dp">

            <TextView
                android:id="@+id/tv_selected_visibility"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Private"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/app_main_color"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_drop_down"
                app:tint="@color/app_main_color"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="24dp">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            app:backgroundTint="@color/light_green_background"
            app:cornerRadius="24dp"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:textColor="@color/app_main_color"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btn_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create"
            android:layout_marginStart="8dp"
            android:enabled="false"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:backgroundTint="@color/app_main_color"
            app:cornerRadius="24dp"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"/>
    </LinearLayout>

</LinearLayout>