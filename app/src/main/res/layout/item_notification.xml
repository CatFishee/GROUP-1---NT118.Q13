<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_main"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">

    <!-- Unread Indicator (Cháº¥m xanh) -->
    <View
        android:id="@+id/unread_indicator"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:background="@drawable/circle_blue"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/channel_avatar" />

    <!-- Channel Avatar -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/channel_avatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="12dp"
        android:src="@drawable/ic_person"
        app:layout_constraintStart_toEndOf="@id/unread_indicator"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Notification Title -->
    <TextView
        android:id="@+id/notification_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:text="CatFishe uploaded a new video"
        android:textColor="@color/app_main_color"
        android:textSize="14sp"
        android:textStyle="bold"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintEnd_toStartOf="@id/video_thumbnail"
        app:layout_constraintStart_toEndOf="@id/channel_avatar"
        app:layout_constraintTop_toTopOf="@id/channel_avatar" />

    <!-- Notification Message (Video Title) -->
    <TextView
        android:id="@+id/notification_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Dog taking a bath"
        android:textColor="@color/app_main_color"
        android:textSize="13sp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintEnd_toEndOf="@id/notification_title"
        app:layout_constraintStart_toStartOf="@id/notification_title"
        app:layout_constraintTop_toBottomOf="@id/notification_title" />

    <!-- Time Ago -->
    <TextView
        android:id="@+id/notification_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="2 hours ago"
        android:textColor="@color/surface_dark"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@id/notification_message"
        app:layout_constraintStart_toStartOf="@id/notification_message"
        app:layout_constraintTop_toBottomOf="@id/notification_message" />

    <!-- Video Thumbnail -->
    <ImageView
        android:id="@+id/video_thumbnail"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:background="@color/light_green_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>