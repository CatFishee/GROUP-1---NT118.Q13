<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="12dp">

    <!-- === 1. HIỆU ỨNG XẾP CHỒNG (STACK EFFECT) === -->

    <!-- Lớp sau cùng (Nhỏ nhất - 90dp) -->
    <View
        android:id="@+id/view_stack_2"
        android:layout_width="90dp"
        android:layout_height="8dp"
        android:background="@drawable/background_playlist_stack"
        android:alpha="0.5"
        app:layout_constraintBottom_toTopOf="@id/view_stack_1"
        app:layout_constraintStart_toStartOf="@id/card_thumb"
        app:layout_constraintEnd_toEndOf="@id/card_thumb"
        android:layout_marginBottom="-3dp" />

    <!-- Lớp giữa (Vừa vừa - 105dp) -->
    <View
        android:id="@+id/view_stack_1"
        android:layout_width="105dp"
        android:layout_height="8dp"
        android:background="@drawable/background_playlist_stack"
        android:alpha="0.8"
        app:layout_constraintBottom_toTopOf="@id/card_thumb"
        app:layout_constraintStart_toStartOf="@id/card_thumb"
        app:layout_constraintEnd_toEndOf="@id/card_thumb"
        android:layout_marginBottom="-3dp" />

    <!-- === 2. THUMBNAIL CHÍNH (120dp x 68dp) === -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_thumb"
        android:layout_width="120dp"
        android:layout_height="68dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Nội dung ảnh và overlay -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_thumb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@color/black"
                android:scaleType="centerCrop"/>

            <!-- Số lượng video -->
            <TextView
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:background="#99000000"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:padding="4dp"
                android:text="0 videos"/>
        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <!-- === 3. THÔNG TIN === -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="6dp"
        android:text="Playlist Name"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@id/card_thumb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_visibility"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:text="Private"
        android:textSize="12sp"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>