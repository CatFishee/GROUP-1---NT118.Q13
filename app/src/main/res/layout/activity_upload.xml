<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main"
    tools:context=".ui.upload.UploadActivity">

    <FrameLayout
        android:id="@+id/top_bar_container"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/iv_close_upload"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_close"
            android:padding="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="start|center_vertical"
            app:tint="@color/app_main_color"
            tools:ignore="ContentDescription" />

    </FrameLayout>

    <!-- ScrollView chứa toàn bộ nội dung nhập liệu -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/top_bar_container"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- FrameLayout chứa thumbnail và nút chọn -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#E0E0E0">
                <ImageView
                    android:id="@+id/iv_thumbnail_preview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>
                <Button
                    android:id="@+id/btn_select_thumbnail"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:paddingStart="30dp"
                    android:paddingEnd="30dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/button_bg"
                    android:text="Select Thumbnail"
                    android:textSize="18dp"
                    android:textColor="@color/button_text"/>
            </FrameLayout>

            <EditText
                android:id="@+id/et_video_title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="24dp"
                android:textColor="@color/app_main_color"
                android:hint="Video Title"
                android:textColorHint="@color/app_main_color"/>

            <EditText
                android:id="@+id/et_video_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Description"
                android:textColorHint="@color/app_main_color"
                android:textColor="@color/app_main_color"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:minLines="3"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Privacy"
                android:textColor="@color/app_main_color"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/layout_select_visibility"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/iv_visibility_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_public"
                    app:tint="@color/icon_tint" />

                <TextView
                    android:id="@+id/tv_visibility_status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:text="Public"
                    android:textColor="@color/app_main_color"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_drop_down"
                    app:tint="@color/app_main_color" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Topics (e.g., Gaming, Music, VLOG)"
                android:textColor="@color/app_main_color"
                android:textStyle="bold"/>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_topics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                style="@style/Widget.App.ChipGroup"
                app:chipSpacing="8dp"/>

            <AutoCompleteTextView
                android:id="@+id/actv_add_topic"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Type or select a topic"
                android:textColorHint="@color/app_main_color"
                android:textColor="@color/app_main_color"
                android:completionThreshold="1"
                android:singleLine="true"
                android:imeOptions="actionDone"/>

            <Button
                android:id="@+id/btn_select_video"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="15dp"
                android:backgroundTint="@color/button_bg"
                android:text="Select Video"
                android:textColor="@color/button_text"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/tv_selected_video_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="No video selected"
                android:textColor="@color/app_main_color"
                android:layout_marginTop="4dp"
                android:textSize="18dp"/>

            <Button
                android:id="@+id/btn_upload_video"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="32dp"
                android:backgroundTint="@color/button_bg"
                android:text="Upload Video"
                android:textColor="@color/button_text"
                android:textSize="20dp"/>

        </LinearLayout>
    </ScrollView>

    <!-- ProgressBar -->
    <ProgressBar
        android:id="@+id/progress_bar_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="visible"/>

</androidx.constraintlayout.widget.ConstraintLayout>