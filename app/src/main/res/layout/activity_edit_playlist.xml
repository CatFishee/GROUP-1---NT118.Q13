<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- 1. TOP BAR -->
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_close" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:textColor="@color/app_main_color"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintBottom_toTopOf="@id/layout_save_button">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- 2. THUMBNAIL EDIT AREA (CHUẨN 16:9) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_edit_thumb"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#F2F2F2"

                app:layout_constraintDimensionRatio="16:9"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Ảnh chính (CenterCrop để lấp đầy khung 16:9) -->
                <ImageView
                    android:id="@+id/iv_cover"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@color/light_green_background" />
                <!-- Bỏ adjustViewBounds đi để ảnh fill đầy -->

                <!-- Nút Sửa (Pencil) -->
                <ImageView
                    android:id="@+id/btn_edit_thumbnail"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="12dp"
                    android:background="@drawable/background_button_glass"
                    android:padding="8dp"
                    android:src="@drawable/ic_edit"
                    app:tint="@color/black"/>
            </androidx.cardview.widget.CardView>

            <!-- 3. TITLE INPUT -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:hint="Title"
                android:textColorHint="#666666"

                app:layout_constraintTop_toBottomOf="@id/card_edit_thumb"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeColor="@color/selector_input_stroke"
                app:hintTextColor="@color/app_main_color"
                app:cursorColor="@color/app_main_color"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:inputType="textCapSentences"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- 4. DESCRIPTION INPUT -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Description"
                android:textColorHint="#666666"

                app:layout_constraintTop_toBottomOf="@id/layout_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeColor="@color/selector_input_stroke"
                app:hintTextColor="@color/app_main_color"
                app:cursorColor="@color/app_main_color"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:inputType="textMultiLine|textCapSentences"
                    android:minLines="2"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- 5. VISIBILITY SELECTOR -->
            <LinearLayout
                android:id="@+id/layout_visibility"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp"
                android:clickable="true"
                android:background="?attr/selectableItemBackground"

                app:layout_constraintTop_toBottomOf="@id/layout_desc"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Nội dung bên trong Visibility giữ nguyên -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Visibility"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="4dp">

                    <ImageView
                        android:id="@+id/iv_visibility_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_lock" />

                    <TextView
                        android:id="@+id/tv_visibility"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Private"
                        android:textSize="16sp"
                        android:textColor="@color/app_main_color"
                        android:textStyle="bold"
                        android:layout_marginStart="12dp"/>
                </LinearLayout>
            </LinearLayout>>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- 6. SAVE BUTTON -->
    <LinearLayout
        android:id="@+id/layout_save_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="16dp"
        android:background="@color/white"
        android:elevation="8dp">

        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Save"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:backgroundTint="@color/app_main_color"
            app:cornerRadius="25dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>