<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ui.history.HistoryActivity">

    <!-- 1. TOP BAR -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="12dp">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:scaleType="fitCenter"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_back"
            app:tint="@color/app_main_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="History"
            android:textColor="@color/app_main_color"
            android:textSize="28sp"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/btn_history_options"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_more_vert"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>
    </LinearLayout>

    <!-- 2. THANH TÌM KIẾM -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/background_search_bar"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp">

        <!-- Icon Kính lúp phóng to (28dp) -->
        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_search"
            app:tint="@color/app_main_color" />

        <!-- EditText nhập liệu -->
        <!-- background="@null" để bỏ gạch chân mặc định của Android -->
        <EditText
            android:id="@+id/et_search_history"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:background="@null"
            android:hint="Search watch history"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textColorHint="@android:color/darker_gray"
            android:inputType="text"
            android:maxLines="1" />
    </LinearLayout>

    <!-- 3. BỘ LỌC CHỦ ĐỀ -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="12dp"
        android:clipToPadding="false"
        android:scrollbars="none">
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group_filters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleLine="true"
            app:selectionRequired="true"
            app:singleSelection="true">
        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_paused_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="8dp"
        android:background="@drawable/background_banner_rounded"
        android:padding="10dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_paused_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Watch history is paused"
            android:textColor="@color/app_main_color"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Turn on to get better recommendations based on what you watch."
            android:textColor="#666666"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintStart_toStartOf="@id/tv_paused_title"
            app:layout_constraintEnd_toStartOf="@+id/btn_turn_on_history"
            app:layout_constraintTop_toBottomOf="@id/tv_paused_title"/>

        <!-- Nút TURN ON: Màu xanh lá chủ đạo -->
        <Button
            android:id="@+id/btn_turn_on_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Turn on"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:backgroundTint="@color/app_main_color"
            app:cornerRadius="20dp"
            android:minHeight="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 4. DANH SÁCH VIDEO -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_history_videos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp"
        android:paddingHorizontal="16dp"
        android:clipToPadding="false"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_video_history" />

</LinearLayout>