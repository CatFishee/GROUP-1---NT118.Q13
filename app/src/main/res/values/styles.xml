<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- nút topic -->
    <style name="Widget.App.TopicButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <!-- KÍCH THƯỚC VÀ KHOẢNG CÁCH -->
        <item name="android:paddingStart">13dp</item>  <!-- padding trái -->
        <item name="android:paddingEnd">13dp</item>    <!-- padding phải -->
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:minWidth">0dp</item>

        <!-- THUỘC TÍNH CHỮ -->
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0</item>

        <!-- NGOẠI HÌNH -->
        <item name="android:background">@drawable/selector_topic_button_background</item>
        <item name="android:textColor">@color/selector_topic_button_text</item>
        <item name="android:textAllCaps">false</item>

        <!-- BO GÓC -->
        <item name="cornerRadius">10dp</item>
    </style>
    <style name="BottomNavItemContainer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackgroundBorderless</item>
    </style>
    <style name="BottomNavItemIcon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>
    <style name="BottomNavItemText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">11sp</item>
    </style>
    <style name="Widget.App.ChipGroup" parent="Widget.MaterialComponents.ChipGroup">
        <!-- Đặt nền của ChipGroup thành trong suốt -->
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="PersonMenuItem" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="ChipTextStyle" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <!-- Nếu bạn dùng font ngoài, khai báo ở đây: <item name="fontFamily">@font/...</item> -->
    </style>

    <style name="Widget.App.FilterChip" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background_color_selector</item>
<!--        <item name="android:textColor">@color/chip_text_color_selector</item>-->
        <item name="android:textAppearance">@style/ChipTextStyle</item>
        <item name="android:textColor">@color/chip_text_color_selector</item>

        <!-- Ẩn dấu tích V (checkmark) -->
        <item name="chipIconVisible">false</item>
        <item name="checkedIconVisible">false</item>

        <!-- Bỏ viền (stroke) -->
        <item name="chipStrokeWidth">0dp</item>

        <!-- Chỉnh font chữ nếu cần -->
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>