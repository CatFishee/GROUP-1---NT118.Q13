<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- nút topic -->
    <style name="Widget.App.TopicButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <!-- KÍCH THƯỚC VÀ KHOẢNG CÁCH -->
        <item name="android:paddingStart">13dp</item>  <!-- padding trái -->
        <item name="android:paddingEnd">13dp</item>    <!-- padding phải -->
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:minWidth">0dp</item>

        <!-- THUỘC TÍNH CHỮ -->
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0</item>

        <!-- NGOẠI HÌNH -->
        <item name="android:background">@drawable/selector_topic_button_background</item>
        <item name="android:textColor">@color/selector_topic_button_text</item>
        <item name="android:textAllCaps">false</item>

        <!-- BO GÓC -->
        <item name="cornerRadius">10dp</item>
    </style>
    <style name="BottomNavItemContainer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackgroundBorderless</item>
    </style>
    <style name="BottomNavItemIcon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>
    <style name="BottomNavItemText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">11sp</item>
    </style>
    <style name="Widget.App.ChipGroup" parent="Widget.MaterialComponents.ChipGroup">
        <!-- Đặt nền của ChipGroup thành trong suốt -->
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>